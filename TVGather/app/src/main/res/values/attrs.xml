<resources>

    <!-- Declare custom theme attributes that allow changing which styles are
         used for button bars depending on the API level.
         ?android:attr/buttonBarStyle is new as of API 11 so this is
         necessary to support previous API levels. -->
    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference" />
        <attr name="metaButtonBarButtonStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="CountTimeView">

        <attr name="background_Color" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="borderDrawColor" format="color" />
        <attr name="borderBottomColor" format="color" />

        <attr name="markBallWidth" format="dimension" />
        <attr name="markBallColor" format="color" />
        <attr name="markBallFlag" format="boolean" />
        <attr name="markIconFlat" format="boolean" />

        <attr name="startAngle" format="integer" />
        <attr name="clockwise" format="boolean" />

        <attr name="countTime" format="integer"/>

        <attr name="textStyle" format="enum">
            <enum name="jump" value="0" />
            <enum name="second" value="1" />
            <enum name="clock" value="2" />
            <enum name="none" value="3" />
        </attr>

        <attr name="titleCenter" format="string"/>
        <attr name="titleCenterColor" format="color"/>
        <attr name="titleCenterSize" format="dimension" />

    </declare-styleable>

</resources>
