<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="994px"
    android:layout_height="450px"
    android:layout_gravity="center"
    android:background="@drawable/stock_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@drawable/top_left_right_corner"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="8dp"
        android:text="暴风集团(300431)"
        android:textColor="@android:color/white"
        android:textSize="30px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="46dp"
                android:layout_marginTop="20dp"
                android:text="10587.31"
                android:textColor="@color/stock_down_content"
                android:textSize="50px" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView7"
                android:layout_below="@+id/textView7"
                android:layout_marginTop="16dp"
                android:text="昨日："
                android:textColor="@color/sub_gray"
                android:textSize="30px" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView8"
                android:layout_marginStart="13dp"
                android:layout_toEndOf="@+id/textView8"
                android:text="35.35"
                android:textColor="@color/title_black"
                android:textSize="30px" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView8"
                android:layout_below="@+id/textView8"
                android:layout_marginTop="15dp"
                android:text="今开："
                android:textColor="@color/sub_gray"
                android:textSize="30px" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView9"
                android:layout_alignTop="@+id/textView10"
                android:text="35.14"
                android:textColor="@color/title_black"
                android:textSize="30px" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView10"
                android:layout_below="@+id/textView10"
                android:layout_marginTop="14dp"
                android:text="最高："
                android:textColor="@color/sub_gray"
                android:textSize="30px" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView11"
                android:layout_alignTop="@+id/textView12"
                android:text="42.35"
                android:textColor="@color/title_black"
                android:textSize="30px" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView12"
                android:layout_below="@+id/textView12"
                android:layout_marginTop="12dp"
                android:text="最低："
                android:textColor="@color/sub_gray"
                android:textSize="30px" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView13"
                android:layout_alignTop="@+id/textView16"
                android:text="35.12"
                android:textColor="@color/title_black"
                android:textSize="30px" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/linear18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="46dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivUporDown"
                    android:layout_width="28px"
                    android:layout_height="35px"
                    android:src="@drawable/up_icon"/>

                <ImageView
                    android:id="@+id/ivAddOrMinus"
                    android:layout_width="28px"
                    android:layout_height="35px"
                    android:src="@drawable/plus_icon"/>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="68.48 (+0.64%)"
                    android:textColor="@color/stock_down_content"
                    android:textSize="50px" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/linear18"
                android:layout_below="@+id/linear18"
                android:layout_marginTop="16dp"
                android:text="振幅："
                android:textSize="30px"
                android:textColor="@color/sub_gray" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/linear18"
                android:layout_alignTop="@+id/textView19"
                android:layout_marginStart="13dp"
                android:text="3.54%"
                android:textColor="@color/title_black"
                android:textSize="30px" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView19"
                android:layout_below="@+id/textView19"
                android:layout_marginTop="15dp"
                android:text="市盈率："
                android:textSize="30px"
                android:textColor="@color/sub_gray" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView20"
                android:layout_alignTop="@+id/textView21"
                android:text="681.96万"
                android:textColor="@color/title_black"
                android:textSize="30px" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView21"
                android:layout_below="@+id/textView21"
                android:layout_marginTop="14dp"
                android:text="成交量："
                android:textSize="30px"
                android:textColor="@color/sub_gray" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView22"
                android:layout_alignStart="@+id/textView22"
                android:layout_alignTop="@+id/textView23"
                android:gravity="right"
                android:text="182.34"
                android:textColor="@color/title_black"
                android:textSize="30px" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView23"
                android:layout_below="@+id/textView23"
                android:layout_marginTop="12dp"
                android:text="总市值："
                android:textSize="30px"
                android:textColor="@color/sub_gray" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView24"
                android:layout_alignStart="@+id/textView24"
                android:layout_alignTop="@+id/textView25"
                android:gravity="right"
                android:text="96.30亿"
                android:textColor="@color/title_black"
                android:textSize="30px" />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>