<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragment.TimeCountFragment">

    <widget.CountTimeView
        android:id="@+id/countTimeProgressView"
        android:layout_gravity="bottom"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_width="406px"
        android:layout_height="406px"
        android:layout_alignParentRight="true"
        app:background_Color="#000000"
        app:borderWidth="5dp"
        app:borderBottomColor="#FFFFFF"
        app:borderDrawColor="@color/sub_gray"
        app:markBallColor="#FFFFFF"
        app:markBallFlag="true"
        app:markBallWidth="10dp"
        app:titleCenterColor="#FFFFFF"
        app:titleCenter="测试"
        app:titleCenterSize="72px"
        app:countTime="20000"
        app:textStyle="clock"
        app:markIconFlat="true"
        app:clockwise="true"/>


</FrameLayout>
